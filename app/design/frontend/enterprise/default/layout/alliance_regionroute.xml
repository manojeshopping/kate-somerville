<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="footer">
            <block type="alliance_regionroute/switch" name="alliance_regionroute_switch"
                   template="alliance_regionroute/switch.phtml" />
        </reference>
    </default>
    <region_index_index translate="label">
        <reference name="root">
            <action method="setTemplate">
                <template>page/splash.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="setTitle" translate="title" module="catalogsearch"><title>Kate Somerville - Select Your Region</title></action>
        </reference>
        <reference name="content">
            <block type="alliance_regionroute/choose" name="alliance_regionroute_choose"
                   template="alliance_regionroute/choose.phtml" />
        </reference>
    </region_index_index>
</layout>
