<?php 
    $_description = $this->getProduct()->getDescription(); 
    //$_howtouse = $this->getProduct()->getHowToUse(); 
	$_howtouse = $this->helper('catalog/output')->productAttribute($this->getProduct(), $this->getProduct()->getData('how_to_use'), 'how_to_use');
