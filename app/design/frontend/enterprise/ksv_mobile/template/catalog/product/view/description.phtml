	$_ingredients = $this->helper('catalog/output')->productAttribute($this->getProduct(), $this->getProduct()->getData('ingredients'), 'ingredients');
?>
    <div class="content">
        
        <?php if ($_description): ?>
            <div class="description">
                <h3>Description</h3>
            	<?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?>
            </div>
        <?php endif ?>
        
        <?php if ($_howtouse): ?>
            <div class="how-to-use">
                <h3>How to Use</h3>
            	<?php echo $_howtouse; ?>
            </div>
        <?php endif ?>

        <?php if ($_ingredients): ?>
            <div class="ingredients">
                <h3>Ingredients</h3>
                <?php echo $_ingredients; ?>
            </div>
        <?php endif ?>

    </div>
