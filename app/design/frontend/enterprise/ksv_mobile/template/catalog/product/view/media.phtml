/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
$_product = $this->getProduct();
if ($_product->getTypeID() == 'configurable') {
	$childProducts = Mage::getModel('catalog/product_type_configurable')
		->getUsedProducts(null, $_product);

	$price_keys = array();
	foreach ($childProducts as $child) {
		if (!$child->isSaleable()) continue;
		$key_value = (int) $child->getPrice();
		$price_keys[$key_value] = $child;
	}

	if($price_keys){
		$lowest_key = min(array_keys($price_keys));
		$lowest_product = $price_keys[$lowest_key];
		$_product = $lowest_product;
	}else{
		foreach($childProducts as $child) {
			$_product = $child;
		break;
		}	
	}
		
		
}
$_helper = $this->helper('catalog/output');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
	<div class="more-views product-gallery">
		<ul class="slides">
			<?php foreach ($this->getGalleryImages() as $_image): ?>
				<li>
					<img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(210); ?>"
						 width="210" height="210" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>"/>
				</li>
			<?php endforeach; ?>
		</ul>
	</div>
<?php else: ?>
	<div class="more-views product-gallery">
		<ul class="slides">
			<li>
				<img src="<?php echo $this->helper('catalog/image')->init(Mage::getModel('catalog/product'), 'thumbnail')->resize(210); ?>" width="210"
					 height="210" alt="<?php echo $this->htmlEscape($_product->getName()) ?>"/>
			</li>
			<li>
				<img src="<?php echo $this->helper('catalog/image')->init(Mage::getModel('catalog/product'), 'thumbnail')->resize(210); ?>" width="210"
					 height="210" alt="<?php echo $this->htmlEscape($_product->getName()) ?>"/>
			</li>
		</ul>
	</div>
<?php endif; ?>
