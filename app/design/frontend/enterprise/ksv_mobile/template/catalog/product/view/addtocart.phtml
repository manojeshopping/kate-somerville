<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Bag'); ?>
<?php $product_default_qty = round($this->getProductDefaultQty() * 1); ?>
<?php $_max = 3;  /* Mage::getModel('cataloginventory/stock_item')->loadByProduct($_product)->getMaxSaleQty(); */ ?>

<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if(!$_product->isGrouped()): ?>
        <div style="clear:both; height:30px;">
			<label for="qty"><?php echo $this->__('Qty:') ?></label>
            <select name="qty" id="qty" title="<?php echo $this->__('Qty') ?>">
                <?php for ($k = 1; $k <= $_max; $k++) : ?>
                    <option value="<?php echo $k ?>" <?php if ($product_default_qty == $k) echo 'selected="selected"' ?>><?php echo $k ?></option>
                <? endfor; ?>
            </select>
		</div>
        <?php endif; ?>
        <div style=" clear:both; margin:20px 0 20px 0;" type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></div>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>
