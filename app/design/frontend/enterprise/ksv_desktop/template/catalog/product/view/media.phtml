 */
?>
<?php
$_product = $this->getProduct();
if ($_product->getTypeID() == 'configurable') {
	$childProducts = Mage::getModel('catalog/product_type_configurable')
		->getUsedProducts(null, $_product);
	
	$price_keys = array();
	foreach ($childProducts as $child) {
		if (!$child->isSaleable()) continue;
		$key_value = (int) $child->getPrice();
		$price_keys[$key_value] = $child;
	}
		
	if($price_keys){
		$lowest_key = min(array_keys($price_keys));
		$lowest_product = $price_keys[$lowest_key];
		$_product = $lowest_product;
	}else{
		foreach($childProducts as $child) {
			$_product = $child;
			break;
		}	
	}
}

$_helper = $this->helper('catalog/output');
$_nativeZoom = false;
$isQuickview = (strpos($this->helper('core/url')->getCurrentUrl(), 'quickview') !== false);
?>

<?php if (!$_nativeZoom): ?>
	<?php /* --------- elevateZoom --------- */ ?>
	<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
		<?php list($_imgWidth, $_imgHeight) = $this->helper('catalog/image')->init($_product, 'image')->getOriginalSizeArray(); ?>
		<?php if (($_imgWidth > 490 || $_imgHeight > 490) && ! $isQuickview): ?>
				<?php
				$_productImageOriginal = $this->helper('catalog/image')->init($_product, 'image');
				$dataZoomImage = 'data-zoom-image="'.$_productImageOriginal.'"';
				$_productImageResized = $this->helper('catalog/image')->init($_product, 'image')->resize(480);
				$_img = '<img src="' . $_productImageResized . '" id="image-zoom" height="480" width="480" alt="' . $this->escapeHtml($_product->getImageLabel()) . '" title="' . $this->escapeHtml($_product->getImageLabel()) . '" '.$dataZoomImage.'/>';
				// echo $_helper->productAttribute($_product, $_img, 'image');
				echo $_img;
				?>
			<script type="text/javascript">
				//<![CDATA[
				jQuery(document).ready(function () {
					jQuery('#image-zoom').elevateZoom({
						borderSize: '1'
					}); 
				});
				//]]>
			</script>
			<p class="notice"><?php // echo $this->__('Click on image to zoom'); ?></p>
		<?php else: ?>
			<div class="product-image">
				<?php
				$_img = '<img src="' . $this->helper('catalog/image')->init($_product, 'image')->resize(480) . '" height="480" width="480" alt="' . $this->escapeHtml($_product->getImageLabel()) . '" title="' . $this->escapeHtml($_product->getImageLabel()) . '" />';
				echo $_helper->productAttribute($_product, $_img, 'image');
				?>
			</div>
		<?php endif; ?>

	<?php else: ?>
		<div class="product-image">
			<?php
			$_img = '<img src="' . $this->helper('catalog/image')->init($_product, 'image')->resize(480) . '" alt="' . $this->escapeHtml($_product->getImageLabel()) . '" title="' . $this->escapeHtml($_product->getImageLabel()) . '" />';
			echo $_helper->productAttribute($_product, $_img, 'image');
			?>
		</div>
	<?php endif; ?>

<?php else: ?>

	<?php /* --------- native magento zoom --------- */ ?>

	<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
		<div class="product-image product-image-zoom">
			<?php
			$_img = '<img id="image" src="' . $this->helper('catalog/image')->init($_product, 'image') . '" alt="' . $this->escapeHtml($this->getImageLabel()) . '" title="' . $this->escapeHtml($this->getImageLabel()) . '" />';
			echo $_helper->productAttribute($_product, $_img, 'image');
			?>
		</div>
		<p class="zoom-notice" id="track_hint"><?php echo $this->__('Double click on above image to view full picture') ?></p>
		<div class="zoom">
			<img id="zoom_out" src="<?php echo $this->getSkinUrl('images/slider_btn_zoom_out.gif') ?>" alt="<?php echo $this->__('Zoom Out') ?>"
				 title="<?php echo $this->__('Zoom Out') ?>" class="btn-zoom-out"/>

			<div id="track">
				<div id="handle"></div>
			</div>
			<img id="zoom_in" src="<?php echo $this->getSkinUrl('images/slider_btn_zoom_in.gif') ?>" alt="<?php echo $this->__('Zoom In') ?>"
				 title="<?php echo $this->__('Zoom In') ?>" class="btn-zoom-in"/>
		</div>
		<script type="text/javascript">
			//<![CDATA[
			Event.observe(window, 'load', function () {
				product_zoom = new Product.Zoom('image', 'track', 'handle', 'zoom_in', 'zoom_out', 'track_hint');
			});
			//]]>
		</script>
	<?php else: ?>
		<div class="product-image">
			<?php
			$_img = '<img src="' . $this->helper('catalog/image')->init($_product, 'image')->resize(275) . '" alt="' . $this->escapeHtml($_product->getImageLabel()) . '" title="' . $this->escapeHtml($_product->getImageLabel()) . '" />';
			echo $_helper->productAttribute($_product, $_img, 'image');
			?>
		</div>
	<?php endif; ?>

	<?php /* --------- /native magento zoom --------- */ ?>
<?php endif; ?>

<?php if (count($this->getGalleryImages()) > 0): ?>
	<div class="more-views">
		<h2><?php echo $this->__('More Views') ?></h2>
		<ul>
			<?php foreach ($this->getGalleryImages() as $_image): ?>
				<li>
					<a href="#"
					   onclick="popWin('<?php echo $this->getGalleryUrl($_image) ?>', 'gallery', 'width=300,height=300,left=0,top=0,location=no,status=yes,scrollbars=yes,resizable=yes'); return false;"
					   title="<?php echo $this->escapeHtml($_image->getLabel()) ?>"><img
							src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(48); ?>"
							width="48" height="48" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>"/></a>
				</li>
			<?php endforeach; ?>
		</ul>
	</div>
<?php endif; ?>
