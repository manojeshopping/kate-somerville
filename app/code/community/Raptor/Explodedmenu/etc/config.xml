<config>
    <modules>
        <Raptor_Explodedmenu>
            <version>1.0.0</version>
        </Raptor_Explodedmenu>
    </modules>
    <global>
		<blocks> 
			<explodedmenu><class>Raptor_Explodedmenu_Block</class></explodedmenu>
		</blocks>
		<helpers>
			<explodedmenu>
				<class>Raptor_Explodedmenu_Helper</class>
			</explodedmenu>
		</helpers>
        <models>
            <explodedmenu>
                <class>Raptor_Explodedmenu_Model</class>
            </explodedmenu>
        </models>		
		<resources>
			<explodedmenu_setup>
				<setup>
					<module>Raptor_Explodedmenu</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</explodedmenu_setup>
        </resources>		
    </global>
	<frontend>
		<layout>
			<updates>
				<explodedmenu>
					<file>explodedmenu.xml</file>
                </explodedmenu>
            </updates>
        </layout>
	</frontend>
	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<explodedmenu translate="title" module="customer">
											<title>Exploded Menu by Raptor</title>
											<sort_order>50</sort_order>
										</explodedmenu>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>	
</config>
